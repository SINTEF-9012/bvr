<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
 	<extension
         point="org.eclipse.ui.commands">
      <command
            id="translatePopupMenu.commands.CVLNative2CVLTyped"
            name="CVLNative to CVLTyped">
	</command>
      <command
            id="translatePopupMenu.commands.CVLTyped2CVLNative"
            name="CVLTyped to CVLNative">
	</command>
	</extension>
	
	<extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.bangbangbang.cvl.m2m.popup.actions.CVLNative2CVLTyped"
            commandId="translatePopupMenu.commands.CVLNative2CVLTyped">
      </handler>
      <handler
            class="org.bangbangbang.cvl.m2m.popup.actions.CVLTyped2CVLNative"
            commandId="translatePopupMenu.commands.CVLTyped2CVLNative">
      </handler>
   	</extension>
   	
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
      		locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu">
      		<menu
      		mnemonic="M"
      		label="CVL M2M">
           <command
                  commandId="translatePopupMenu.commands.CVLNative2CVLTyped"
                  id="translatePopupMenu.menus.CVLNative2CVLTyped"
                  mnemonic="S">

                    <visibleWhen>
                           <with variable="activeMenuSelection">
                            <iterate
                                 ifEmpty="false">
                             <adapt type="org.eclipse.core.resources.IResource">
                               <test property="org.eclipse.core.resources.name" value="*.cvl" />
                             </adapt>
                            </iterate>
                           </with>
                    </visibleWhen>
            </command>
            <command
                  commandId="translatePopupMenu.commands.CVLTyped2CVLNative"
                  id="translatePopupMenu.menus.CVLTyped2CVLNative"
                  mnemonic="S">

                    <visibleWhen>
                           <with variable="activeMenuSelection">
                            <iterate
                                 ifEmpty="false">
                             <adapt type="org.eclipse.core.resources.IResource">
                               <test property="org.eclipse.core.resources.name" value="*.cvl" />
                             </adapt>
                            </iterate>
                           </with>
                    </visibleWhen>
            </command>
            </menu>
      </menuContribution>
   </extension>

</plugin>
